@using System.Collections.Generic;
@using vendor_tracker.Models;

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Vendor Tracker</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
        <link href="~/css/styles.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div class="container">
            <h2>Create a new vendor:</h2>
                
            <form action="/vendors" method="post">
                <label for="vendorName">Name:</label>
                <input id="vendorName" name="Name" type="text">

                <label for="vendorDescription">Description:</label>
                <input id="vendorDescription" name="Description" type="text">
                
                <button type="submit">Add</button>
            </form>



            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>