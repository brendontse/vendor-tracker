@using System.Collections.Generic;
@using vendor_tracker.Models;

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Vendor Tracker</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
        <link href="~/css/styles.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div class="container">
            <h2>Create a new oder:</h2>
                
            <form action="/orders" method="post">
                <label for="orderName">Name:</label>
                <input id="orderName" name="vendorName" type="text">

                <label for="orderDescription">Description:</label>
                <input id="orderDescription" name="orderDescription" type="text">

                <label for="orderPrice">Price:</label>
                <input id="orderPrice" name="orderPrice" type="text">

                <button type="submit">Add</button>
            </form>



            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>