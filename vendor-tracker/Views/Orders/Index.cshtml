@using System.Collections.Generic;
@using vendor_tracker.Models;

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Vendor Tracker</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
        <link href="~/css/styles.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div class="container">
            
            @if (@Model.Count == 0)
            {
                <h3>No orders have been added for this vendor!</h3>
            }

            

            <ul>
            @foreach (Order order in Model)
            {
                <h2>Here are the current orders for this vendor:</h2>
                <li><a href='/orders/@order.ID'>@order.Name</a></li>
            }
            </ul>

            <p><a href="/orders/new">Add a new order.</a></p>
            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>